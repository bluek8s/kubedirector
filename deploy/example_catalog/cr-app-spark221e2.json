{
    "apiVersion": "kubedirector.hpe.com/v1beta1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "spark221e2"
    },

    "spec" : {
        "systemdRequired": true,
        "defaultPersistDirs" : ["/usr", "/opt", "/var", "/data"],
        "config": {
            "roleServices": [
                {
                    "serviceIDs": [
                        "ssh",
                        "spark",
                        "spark-master",
                        "spark-worker"
                    ],
                    "roleID": "controller"
                },
                {
                    "serviceIDs": [
                        "ssh",
                        "spark-worker"
                    ],
                    "roleID": "worker"
                },
                {
                    "serviceIDs": [
                        "ssh",
                        "jupyter-nb"
                    ],
                    "roleID": "jupyter"
                }
            ],
            "selectedRoles": [
                "controller",
                "worker",
                "jupyter"
            ]
        },
        "label": {
            "name": "Spark 2.2.1 + Jupyter",
            "description": "Spark 2.2.1 with Jupyter notebook"
        },
        "distroID": "bluedata/spark221e2",
        "version": "2.7",
        "configSchemaVersion": 7,
        "services": [
            {
                "endpoint": {
                    "port": 22,
                    "isDashboard": false
                },
                "id": "ssh",
                "label": {
                    "name": "SSH"
                }
            },
            {
                "endpoint": {
                    "urlScheme": "http",
                    "path": "/",
                    "isDashboard": true,
                    "port": 8080
                },
                "id": "spark",
                "label": {
                    "name": "Spark master"
                }
            },
            {
                "endpoint": {
                    "urlScheme": "spark",
                    "isDashboard": false,
                    "port": 7077
                },
                "id": "spark-master",
                "label": {
                    "name": "Spark master"
                }
            },
            {
                "endpoint": {
                    "urlScheme": "http",
                    "path": "/",
                    "isDashboard": true,
                    "port": 8081
                },
                "id": "spark-worker",
                "label": {
                    "name": "Spark worker"
                }
            },
            {
                "endpoint": {
                    "urlScheme": "http",
                    "path": "/",
                    "isDashboard": true,
                    "port": 8888
                },
                "id": "jupyter-nb",
                "label": {
                    "name": "Jupyter Notebook"
                }
            }
        ],
        "defaultImageRepoTag": "docker.io/bluedata/sparkbase:2.2",
        "defaultConfigPackage":  {
            "packageURL": "file:///opt/configscripts/appconfig-2.6.tgz"
        },
        "roles": [
            {
                "cardinality": "1",
                "id": "controller"
            },
            {
                "cardinality": "0+",
                "id": "worker"
            },
            {
                "imageRepoTag": "docker.io/bluedata/jupyter:2.3",
                "cardinality": "0+",
                "id": "jupyter"
            }
        ]
    }
}
