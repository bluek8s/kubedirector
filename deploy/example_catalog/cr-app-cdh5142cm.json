{
    "apiVersion": "kubedirector.hpe.com/v1beta1",
    "kind": "KubeDirectorApp",
    "metadata": {
        "name" : "cdh5142cm"
    },

    "spec" : {
        "logoURL": "https://raw.githubusercontent.com/bluedatainc/solutions/master/MLOps/logos/cdh632-logo.png",
        "systemdRequired" : true,
        "defaultPersistDirs" : ["/usr", "/opt", "/var", "/data"],
        "defaultEventList" : ["configure", "addnodes", "delnodes"],
        "capabilities" : [
            "SYS_PACCT",
            "SYS_RESOURCE",
            "CHOWN",
            "FSETID",
            "KILL",
            "SETGID",
            "SETUID",
            "NET_BIND_SERVICE",
            "NET_BROADCAST",
            "SYS_PTRACE",
            "SETFCAP"
        ],

        "config": {
            "configMeta": {
                "streaming_jar": "/opt/cloudera/parcels/CDH/lib/hadoop-mapreduce/hadoop-streaming.jar",
                "cdh_major_version": "CDH5",
                "cdh_parcel_repo": "http://archive.cloudera.com/cdh5/parcels/5.14.2",
                "cdh_full_version": "5.14.2",
                "cdh_parcel_version": "5.14.2-1.cdh5.14.2.p0.3",
                "impala_jar_version": "0.1-SNAPSHOT"
            },
            "roleServices": [
                {
                    "serviceIDs": [
                        "cdh-scm-srvr",
                        "cdh-scm-srvr-db",
                        "cdh-scm-agent",
                        "hdfs-dn",
                        "ssh",
                        "mysqld",
                        "job-hist-srvr",
                        "pig",
                        "hue",
                        "httpfs",
                        "impala",
                        "hive-server",
                        "hive-metastore",
                        "oozie",
                        "sqoop2",
                        "yarn-rm",
                        "hdfs-nn"
                    ],
                    "roleID": "controller"
                },
                {
                    "serviceIDs": [
                        "cdh-scm-agent",
                        "yarn-nm",
                        "ssh",
                        "hdfs-dn"
                    ],
                    "roleID": "worker"
                }
            ],
            "selectedRoles": [
                "controller",
                "worker"
            ]
        },
        "defaultImageRepoTag": "docker.io/bluedata/cdh5142cm:3.0",
        "label": {
            "name": "CDH 5.14.2",
            "description": "CDH 5.14.2 with YARN support. Includes Pig, Hive, and Hue."
        },
        "distroID": "bluedata/cdh51427x",
        "version": "1.5",
        "configSchemaVersion": 7,
        "services": [
            {
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 7180,
                    "path": "/"
                },
                "id": "cdh-scm-srvr",
                "label": {
                    "name": "Cloudera Manager"
                }
            },
            {
                "id": "cdh-scm-srvr-db",
                "label": {
                    "name": "Cloudera manager database"
                }
            },
            {
                "id": "cdh-scm-agent",
                "label": {
                    "name": "Cloudera manager agent"
                }
            },
            {
                "label": {
                    "name": "ResourceManager"
                },
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 8088,
                    "path": "/cluster"
                },
                "id": "yarn-rm"
            },
            {
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 8042,
                    "path": "/"
                },
                "id": "yarn-nm",
                "label": {
                    "name": "NodeManager"
                }
            },
            {
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 50070,
                    "path": "/"
                },
                "id": "hdfs-nn",
                "label": {
                    "name": "NameNode"
                }
            },
            {
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 50075,
                    "path": "/"
                },
                "id": "hdfs-dn",
                "label": {
                    "name": "DataNode"
                }
            },
            {
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 19888,
                    "path": "/jobhistory"
                },
                "id": "job-hist-srvr",
                "label": {
                    "name": "Yarn Job history server"
                }
            },
            {
                "id": "pig",
                "label": {
                    "name": "Pig"
                }
            },
            {
                "id": "hive-metastore",
                "label": {
                    "name": "HIVE Metastore"
                }
            },
            {
                "id": "hive-server",
                "label": {
                    "name": "HIVE Server 2"
                }
            },
            {
                "endpoint": {
                    "isDashboard": true,
                    "urlScheme": "http",
                    "port": 8888,
                    "path": "/"
                },
                "id": "hue",
                "label": {
                    "name": "Hue Console"
                }
            },
            {
                "id": "httpfs",
                "label": {
                    "name": "Hadoop HTTPFS"
                }
            },
            {
                "id": "sqoop2",
                "label": {
                    "name": "Sqoop2 server"
                }
            },
            {
                "id": "impala",
                "label": {
                    "name": "Impala service"
                }
            },
            {
                "endpoint": {
                    "port": 22,
                    "isDashboard": false
                },
                "id": "ssh",
                "label": {
                    "name": "SSH"
                }
            },
            {
                "id": "mysqld",
                "label": {
                    "name": "Mysqld server"
                }
            },
            {
                "id": "oozie",
                "label": {
                    "name": "OOZIE service"
                }
            }
        ],
        "defaultConfigPackage":  {
            "packageURL": "https://s3.amazonaws.com/bluek8s/kubedirector/cdh5142cm/cdh5-cm-setup-1.4.tgz"
        },
        "roles": [
            {
                "cardinality": "1",
                "id": "controller"
            },
            {
                "cardinality": "1+",
                "id": "worker"
            }
        ]
    }
}
